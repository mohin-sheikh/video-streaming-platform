    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.7",
    "morgan": "^1.10.0",
    "nanoid": "^3.2.0",
    "winston": "^3.4.0",
    "zod": "^3.11.6"
